
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout_Authenticated.cshtml";
}


<section class="contact-area section-padding-40-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Contact Area -->
                <div class="contact-form-area contact-page">
                    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "pl-5 pr-5 mt-4 mb-4" }))
                    {
                        <br />
                        <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; text-align: center; color:black;">Seleccionar producto</h2>
                        <div class="row">

                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.DropDownList("asunto", new List<SelectListItem>
                                    {
                                        new SelectListItem { Value = "Solicitar cuenta", Text = "Solicitar cuenta" },
                                        new SelectListItem { Value = "Solicitar información adicional", Text = "Solicitar información adicional" },
                                        new SelectListItem { Value = "Otra consulta", Text = "Otra consulta" }
                                    }, "Seleccione asunto", new { @class = "form-control form-control-lg" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div style="text-align:center;"class="form-group">
                                    <button type="submit" class="custom-button">Enviar</button>
                                </div>                               
                            </div>
                            
                            <style>
                                /* Estilos para el botón */
                                .custom-button {
                                    background-color: #293033; 
                                    color: #ffffff; 
                                    border: none; 
                                    padding: 10px 20px; 
                                    cursor: pointer;
                                    transition: background-color 0.3s ease; 
                                    border-radius: 10px;
                                }

                                    /* Estilos para el hover */
                                    .custom-button:hover {
                                        background-color: #b30000; 
                                    }
                            </style>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>