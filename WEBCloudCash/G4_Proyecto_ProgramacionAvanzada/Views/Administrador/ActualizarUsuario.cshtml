@model WEBCloudCash.Entities.entUsuarios
@{
    ViewBag.Title = "ActualizarUsuario";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<section class="contact-area section-padding-40-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Contact Area -->
                <div class="contact-form-area contact-page">
                    @* Para uso de administrador *@
                    @using (Html.BeginForm("ActualizarUsuario", "Administrador", FormMethod.Post, new { @class = "pl-5 pr-5 mt-4 mb-4" }))
                    {
                        <br />
                        if (ViewBag.mensaje != null)
                        {   
                            <div class="alert alert-danger" role="alert" style="text-align:center;">
                                    @ViewBag.mensaje
                            </div>   
                        }

                        <br />
                        <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: black; text-align: center;">Actualizar usuario</h2>

                        @Html.HiddenFor(m => m.id_Usuario)

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.cedula, new { @readonly = "@readonly", @class = "form-control form-control-lg", @type = "text", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Cédula</label>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.nombre, new { @class = "form-control form-control-lg", @type = "text", @style = "color: white;background-color:#363E48;\"" })
                                    <label style="color: black;" class="form-label">Nombre</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.apellidoUno, new { @class = "form-control form-control-lg", @type = "text", @style = "color: white;background-color:#363E48;\"" })
                                    <label style="color: black;" class="form-label">Primer apellido</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.apellidoDos, new { @class = "form-control form-control-lg", @type = "text", @style = "color: white;background-color:#363E48;\"" })
                                    <label style="color: black;" class="form-label">Segundo apellido</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.nombreUsuario, new { @class = "form-control form-control-lg", @type = "text", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Nombre de usuario</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.contrasena, new { @class = "form-control form-control-lg", @type = "password", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Contraseña</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.telefono, new { @class = "form-control form-control-lg", @type = "text", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Teléfono</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.correo, new { @class = "form-control form-control-lg", @type = "email", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Correo electrónico</label>
                                </div>
                            </div>


                            <div class="col-lg-12 text-center">
                                <div class="pt-1 mb-4">
                                    <input style="color: white; background-color: #363E48;" type="submit" class="btn credit-btn mt-30" value="Actualizar">
                                </div>
                                <div class="pt-1 mb-4">
                                    <a style="color: white; background-color: #363E48;" class="btn credit-btn mt-30" href="@Url.Action("EliminarUsuario", "Administrador", new { q = Model.id_Usuario })">Eliminar</a>
                                     <br /><label style="color: black;" class="form-label">(Al eliminar un usuario se elimina toda la información relacionada)</label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

