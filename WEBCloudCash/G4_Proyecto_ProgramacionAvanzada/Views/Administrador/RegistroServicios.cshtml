@model WEBCloudCash.Entities.entServicios

@{
    ViewBag.Title = "RegistroServicios";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<section class="contact-area section-padding-40-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Contact Area -->
                <div class="contact-form-area contact-page">
                    @* Para uso de administrador *@
                    @using (Html.BeginForm("RegistroServicios", "Administrador", FormMethod.Post, new { @class = "pl-5 pr-5 mt-4 mb-4" }))
                    {
                        <br />
                        if (ViewBag.mensaje != null)
                        {
                            if (ViewBag.mensaje == "Servicio registrado con éxito")
                            {<div class="alert alert-success" role="alert" style="text-align:center;">
                                    @ViewBag.mensaje
                                </div>
                            }
                            else
                            {<div class="alert alert-danger" role="alert" style="text-align:center;">
                                    @ViewBag.mensaje
                                </div>
                            }
                        }

                        <br />
                        <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: black; text-align: center;">Registrar Servicios</h2>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control form-control-lg", @type = "text", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Descripción del servicio</label>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.monto, new { @class = "form-control form-control-lg", @type = "number", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Precio del servicio</label>
                                </div>
                            </div>

                            <div class="col-lg-12 text-center">
                                <div class="pt-1 mb-4">
                                    <input style="color: white; background-color: #363E48;" type="submit" class="btn credit-btn mt-30" value="Registrar">
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>




