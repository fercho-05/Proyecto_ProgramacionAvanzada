
@{
    ViewBag.Title = "PerfilAdministrador";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<section class="contact-area section-padding-40-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Contact Area -->
                <div class="contact-form-area contact-page">
                    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "pl-5 pr-5 mt-4 mb-4" }))
                    {
                        <br />
                        <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: black; text-align: center;">Perfil Administrador</h2>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("cedula", Session["CedulaUsuario"], new { @readonly = "@readonly", @class = "form-control form-control-lg", @type = "text", @placeholder = "Cédula", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Cédula</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("nombre", Session["NombreUsuario"], new { @readonly = "@readonly", @class = "form-control form-control-lg", @type = "text", @placeholder = "Nombre", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Nombre</label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("apellidoUno", Session["Apellido1Usuario"], new { @readonly = "@readonly", @class = "form-control form-control-lg", @type = "text", @placeholder = "Apellido Uno", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Primer apellido</label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("apellidoDos", Session["Apellido2Usuario"], new { @readonly = "@readonly", @class = "form-control form-control-lg", @type = "text", @placeholder = "Apellido Dos", @style = "color: white; background-color: #363E48;\"" })
                                    <label style="color: black;" class="form-label">Segundo apellido</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("nombreUsuario", Session["userName"], new { @readonly = "@readonly", style = "color: white; background-color: #363E48;", @placeholder = "Nombre de Usuario", @class = "form-control form-control-lg", @type = "text" })
                                    <label style="color: black;" class="form-label">Nombre de usuario</label>
                                    <a style="margin-left:1rem;" href="#">actualizar</a>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("telefono", Session["TelefonoUsuario"], new { @readonly = "@readonly", @style = "color: white; background-color: #363E48;", @placeholder = "Teléfono", @class = "form-control form-control-lg", @type = "text" })
                                    <label style="color: black;" class="form-label">Teléfono</label>
                                    <a style="margin-left:1rem;" href="#">actualizar</a>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("correo", Session["CorreoUsuario"], new { @readonly = "@readonly", @style = "color:white; background-color: #363E48;", @placeholder = "Correo electrónico", @class = "form-control form-control-lg", @type = "email" })
                                    <label style="color: black;" class="form-label">Correo electrónico</label>
                                    <a style="margin-left:1rem;" href="#">actualizar</a>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-outline mb-4">
                                    @Html.TextBox("id_TipoUsuario", Session["TipoUsuario"], new { @readonly = "@readonly", @style = "color:white; background-color: #363E48;", @placeholder = "Tipo Usuario", @class = "form-control form-control-lg", @type = "text" })
                                    <label style="color: black;" class="form-label">Tipo de Usuario</label>
                                    <a style="margin-left:1rem;" href="#">actualizar</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Funciones/ApiConsultarNombres.js"></script>

