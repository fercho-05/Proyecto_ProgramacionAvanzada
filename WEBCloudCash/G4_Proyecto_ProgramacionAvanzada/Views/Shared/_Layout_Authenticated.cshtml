<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CloudCash - Banca en línea</title>

    <link rel="stylesheet" href="~/Template/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Template/vendors/ti-icons/css/themify-icons.css"> <!--ICONOS DEL MENU LATERAL-->
    <link rel="stylesheet" href="~/Template/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Template/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Template/css/vertical-layout-light/style.css">
    <link rel="stylesheet" href="~/Template/css/authenticated.css">
    <link rel="icon" href="~/Template/img/core-img/favicon.ico">



</head>
<body>
    <div class="container-scroller">

        @*HEADER*@
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" href="@Url.Action("Index","Home")"><img style="height:100px;" src="~/Template/img/cloudcashlogo-nb-black.png" class="mr-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index","Home")"><img src="~/Template/img/cloudcashlogo-nb-black-small.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                
                <ul class="navbar-nav navbar-nav-right">
                    <!--AQUI SE PONDRA LO DE CERRAR SESION Y EL NOMBRE-->
                    <li class="nav-item nav-profile dropdown">

                        @if (Session["NombreCompleto"] != null)
                        {
                            @Session["NombreCompleto"]
                        }

                        &nbsp;&nbsp;&nbsp;

                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            <img src="~/Template/images/faces/user.png" alt="profile" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">

                            @if (Session["NombreCompleto"] != null)
                            {
                               
                                <a class="dropdown-item" href="@Url.Action("CerrarSesion","Login")">
                                    <i class="ti-power-off text-primary"></i>
                                    Cerrar Sesión
                                </a>
                            }
                            else
                            {
                                <a class="dropdown-item" href="@Url.Action("LogIn","Login")">
                                    <i class="ti-home text-primary"></i>
                                    Iniciar Sesión
                                </a>
                            }

</div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>

                </button>
            </div>
        </nav>

        <div class="container-fluid page-body-wrapper">
            @*MENU LATERAL*@
            <nav class="sidebar sidebar-offcanvas" id="sidebar" style="background-color: #b30000;">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" style="color: white;" href="@Url.Action("Perfil","Authenticated")">
                            <i style="color: white;" class="icon-grid menu-icon"></i>
                            <span class="menu-title">Mi Perfil</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white;" href="@Url.Action("Productos","Authenticated")">
                            <i style="color: white;" class="icon-grid menu-icon"></i>
                            <span class="menu-title">Mis Productos</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white;" href="@Url.Action("EnviarDinero","Authenticated")">
                            <i style="color: white;" class="icon-grid menu-icon"></i>
                            <span class="menu-title">Enviar Dinero</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white;" href="@Url.Action("PagarServicios","Authenticated")">
                            <i style="color: white;" class="icon-grid menu-icon"></i>
                            <span class="menu-title">Pagar Servicios</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white;" href="@Url.Action("MiCredito","Authenticated")">
                            <i style="color: white;" class="icon-grid menu-icon"></i>
                            <span class="menu-title">Mi Crédito</span>
                        </a>
                    </li>

                </ul>
            </nav>

            <div class="main-panel">
                @*PANEL PRINCIPAL*@
                <div class="content-wrapper">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>

                @*FOOTER*@
            </div>
        </div>
    </div>


    <script src="~/Template/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Template/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Template/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Template/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/Template/js/dataTables.select.min.js"></script>
    <script src="~/Template/js/off-canvas.js"></script>
    <script src="~/Template/js/hoverable-collapse.js"></script>
    <script src="~/Template/js/Template.js"></script>
    <script src="~/Template/js/settings.js"></script>
    <script src="~/Template/js/todolist.js"></script>
    <script src="~/Template/js/dashboard.js"></script>
    <script src="~/Template/js/Chart.roundedBarCharts.js"></script>
</body>
</html>