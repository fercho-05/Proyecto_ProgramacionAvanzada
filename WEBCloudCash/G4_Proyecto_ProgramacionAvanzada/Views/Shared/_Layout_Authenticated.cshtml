<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CloudCash: Banca en línea</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Template/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Template/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Template/assets/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Template/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Template/assets/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Template/assets/vendors/owl-carousel-2/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Template/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="icon" href="~/Template/img/core-img/favicon.ico">

    <!-- Datatables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">

</head>
<body>


    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <nav style="background-color: #b30000; " class="sidebar sidebar-offcanvas" id="sidebar">
            <div style="background-color: #191C24; " class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" href="@Url.Action("Index","Home")"><img style="height:5rem; width:12rem;" src="/Template/img/cloudcashlogo-nb.png" alt="logo" /></a>
                <a class="sidebar-brand brand-logo-mini" href="@Url.Action("Index","Home")"><img style="height:2rem; width:8rem;" src="/Template/img/cloudcashlogo-nb-small.png" alt="logo" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Perfil","Authenticated")">
                        <span class="menu-icon">
                            <i class="mdi mdi-account"></i>
                        </span>
                        <span style="color:white;" class="menu-title">Mi Perfil</span>
                    </a>
                </li>

                <li class="nav-item menu-items">
                    <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                        <span class="menu-icon">
                            <i class="mdi mdi-cards"></i>
                        </span>
                        <span style="color:white;" class="menu-title">Mis Productos</span>
                        <i class="menu-arrow"></i>
                    </a>
                    <div class="collapse" id="ui-basic">
                        <ul class="nav flex-column sub-menu">
                            <!--ESTOS PRODUCTOS SE MOSTRARAN DEPENDIENDO DE CUALES TENGA EL USUARIO-->
                            <li class="nav-item"> <a id="productoHover" style="color:white;" class="nav-link" href="@Url.Action("TarjetaCredito","Authenticated")">Tarjetas de Crédito</a></li>
                            <li class="nav-item"> <a id="productoHover" style="color:white;" class="nav-link" href="@Url.Action("TarjetaDebito","Authenticated")">Tarjetas de Débito</a></li>
                            <li class="nav-item"> <a id="productoHover" style="color:white;" class="nav-link" href="@Url.Action("CuentaAhorro","Authenticated")">Cuenta de Ahorro</a></li>
                            <li class="nav-item"> <a id="productoHover" style="color:white;" class="nav-link" href="@Url.Action("CuentaCorriente","Authenticated")">Cuenta Corriente</a></li>
                            <li class="nav-item"> <a id="productoHover" style="color:white;" class="nav-link" href="@Url.Action("CuentaPlanilla","Authenticated")">Cuenta de Planilla</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("EnviarDinero","Authenticated")">
                        <span class="menu-icon">
                            <i class="mdi mdi-cash-multiple"></i>
                        </span>
                        <span style="color:white;" class="menu-title">Enviar Dinero</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("MiCredito","Authenticated")">
                        <span class="menu-icon">
                            <i class="mdi mdi-home"></i>
                        </span>
                        <span style="color:white;" class="menu-title">Mi Crédito</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("VerEnvios","Authenticated")">
                        <span class="menu-icon">
                            <i class="mdi mdi-cash"></i>
                        </span>
                        <span style="color:white;" class="menu-title">Ver Envíos</span>
                    </a>
                </li>


            </ul>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav style="background-color: #191C24; " class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index","Home")"><img style="height:3rem; width:6rem;" src="~/Template/img/cloudcashlogo-nb-small.png" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>

                    <ul class="navbar-nav navbar-nav-right">



                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src=@Session["Foto"] alt="">
                                    <p style="color: white;" class="mb-0 d-none d-sm-block navbar-profile-name">
                                        @if (Session["NombreCompleto"] != null)
                                        {
                                            @Session["NombreCompleto"]
                                        }
                                    </p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">

                                <div class="dropdown-divider"></div>

                                @if (Session["NombreCompleto"] != null)
                                {
                                    <a class="dropdown-item preview-item" href="@Url.Action("CerrarSesion","Login")">

                                        <div class="preview-item-content">
                                            <p class="preview-subject mb-1">Cerrar Sesión</p>
                                        </div>
                                    </a>
                                }
                                else
                                {
                                    <a class="dropdown-item preview-item" href="@Url.Action("LogIn","Login")">

                                        <div class="preview-item-content">
                                            <p class="preview-subject mb-1">Iniciar Sesión</p>
                                        </div>
                                    </a>
                                }


                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div style="background-color:white;" class="content-wrapper">

                    @RenderBody()

                </div>
            </div>




        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Template/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Template/assets/js/off-canvas.js"></script>
    <script src="~/Template/assets/js/hoverable-collapse.js"></script>
    <script src="~/Template/assets/js/misc.js"></script>
    <script src="~/Template/assets/js/settings.js"></script>
    <script src="~/Template/assets/js/todolist.js"></script>

    <!-- Datatables -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
</body>
</html>

